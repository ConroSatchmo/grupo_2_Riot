<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { title: product.name }) %>
</head>

<body>
    <%- include('../partials/navbar') %>

        <div class="container py-5 ">
            <div class="row justify-content-center align-items-center">
                <div class="col-5 border-end py-5">
                    <% product.images.forEach(image=> { %>
                        <% if(image.file_name.includes('000A')) { %>
                            <img src="/images/products/<%= image.file_name %>" class="img-fluid scale" alt="...">
                            <% } %>
                                <% }) %>
                                    <div class="d-flex flex-row">
                                        <% product.images.forEach(image=> { %>
                                            <img src="/images/products/<%= image.file_name %>" class="img-fluid scale"
                                                alt="..." width="120">
                                            <% }) %>
                                    </div>
                </div>
                <div class="col-5 ps-5">
                    <h1>
                        <%= product.name %>
                    </h1>
                    <p class="text-muted fs-2">$<%= product.price %>
                    </p>
                    <div class="col-3">
                        <select class="form-select mb-4">
                            <% colors.forEach(color=> { %>
                                <option <%=product.colors.name==color.name ? 'selected' : '' %> ><%= color.name %>
                                </option>
                                <% }) %>
                        </select>

                    </div>
                    <div class="col-6">

                        <div class="input-group mb-3">
                            <input type="number" class="form-control" min="1" value="1">
                            <a href="#" class="btn btn-primary salmon-btn">Agregar al carrito</a>
                        </div>
                    </div>
                    <h5 class="mt-5">Detalle del producto <i class="fa-solid fa-indent cl-salmon"></i></h5>
                    <p>
                        <%= product.description %>
                    </p>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>
</body>

</html>