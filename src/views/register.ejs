<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head', {nameStyle: 'register' , titleHTML: 'Register' }) %>
</head>


  <body>
    <%- include('./partials/header') %>

      <main>
        <section>
          <div class="mensaje">
            <h2>Creá tu cuenta</h2>
            <% if(locals.msg){ %>
            <p><%= msg %></p>
            <% } %>
          </div>
          <form action="/users/register" method="post" class="formulario" enctype="multipart/form-data">
            <div class="nombres">
              <label for="nombres">Nombres</label>
              <input type="text" name="nombres" id="nombres" class="form-control <%= locals.errors && errors.nombres ? 'is-invalid' : null %>" value="<%= locals.old && old.nombres ? old.nombres : '' %>"/>
              <% if (locals.errors && errors.nombres) { %>
                <div class="text-danger">
                  <%= errors.nombres.msg %>
                </div>
              <% } %>
            </div>
            <div class="apellidos">
              <label for="apellidos">Apellidos</label>
              <input type="text" name="apellidos" id="apellidos" class="form-control <%= locals.errors && errors.apellidos ? 'is-invalid' : null %>"value="<%= locals.old && old.apellidos ? old.apellidos : '' %>"/>
              <% if (locals.errors && errors.apellidos) { %>
                <div class="text-danger">
                  <%= errors.apellidos.msg %>
                </div>
              <% } %>
            </div>
            <div class="email">
              <label for="email">E-mail</label>
              <input type="email" name="email" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" value="<%= locals.old && old.email ? old.email : '' %>"/>
              <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                  <%= errors.email.msg %>
                </div>
              <% } %>
            </div>
            <div class="usuario">
              <label for="usuario">Nombre de usuari@</label>
              <input type="text" name="usuario" id="usuario" class="form-control <%= locals.errors && errors.usuario ? 'is-invalid' : null %>" value="<%= locals.old && old.usuario ? old.usuario : '' %>"/>
              <% if (locals.errors && errors.usuario) { %>
                <div class="text-danger">
                  <%= errors.usuario.msg %>
                </div>
              <% } %>
            </div>
            <div class="contrasenia1">
              <label for="password">Contraseña</label>
              <input type="password" name="password" id="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>">
              <% if (locals.errors && errors.password) { %>
                <div class="text-danger">
                  <%= errors.password.msg %>
                </div>
              <% } %>
            </div>
            <!-- <div class="contrasenia2">
              <label for="confirm">Confirmar contraseña</label>
              <input type="password" name="confirm" id="confirm">
            </div> -->
            <div class="avatar">
              <label for="avatar">Avatar</label>
              <input type="file" name="avatar" id="avatar" class="form-control <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
              <% if (locals.errors && errors.avatar) { %>
                <div class="text-danger">
                  <%= errors.avatar.msg %>
                </div>
              <% } %>
            </div>
            <button type="submit" class="boton" required>Crear</button>
          </form>
      </main>

      <%- include('./partials/footer') %>
  </body>

</html>