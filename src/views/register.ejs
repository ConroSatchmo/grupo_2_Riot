<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head', {nameStyle: 'register' , titleHTML: 'Register' }) %>
</head>


  <body>
    <%- include('./partials/header') %>

      <main>
        <section>
          <div class="mensaje">
            <h2>Creá tu cuenta</h2>
            <% if(locals.msg){ %>
            <p><%= msg %></p>
            <% } %>
          </div>
          <form action="/users/register" method="post" class="formulario" enctype="multipart/form-data">
            <div class="nombres">
              <label for="nombres">Nombres</label>
              <input type="text" name="nombres" id="nombres" value="<%= locals.old && old.nombres ? old.nombres : '' %>"/>
            </div>
            <div class="apellidos">
              <label for="apellidos">Apellidos</label>
              <input type="text" name="apellidos" id="apellidos" value="<%= locals.old && old.apellidos ? old.apellidos : '' %>"/>
            </div>
            <div class="email">
              <label for="email">E-mail</label>
              <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : '' %>"/>
            </div>
            <div class="usuario">
              <label for="usuario">Nombre de usuari@</label>
              <input type="text" name="usuario" id="usuario" value="<%= locals.old && old.usuario ? old.usuario : '' %>"/>
            </div>
            <div class="contrasenia1">
              <label for="password">Contraseña</label>
              <input type="password" name="password" id="password"
                title="La contraseña debe tener un mínimo de 8 caracteres.">
            </div>
            <div class="contrasenia2">
              <label for="confirm">Confirmar contraseña</label>
              <input type="password" name="confirm" id="confirm"
                title="La contraseña debe tener un mínimo de 8 caracteres.">
            </div>
            <div class="avatar">
              <label for="avatar">Avatar</label>
              <input type="file" name="avatar" id="avatar">
            </div>
            <button type="submit" class="boton" required>Crear</button>
          </form>
      </main>

      <%- include('./partials/footer') %>
  </body>

</html>