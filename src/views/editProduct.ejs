<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head', {nameStyle: 'register' , titleHTML: 'Edici칩n de Productos' }) %>
</head>

<body>
  <%- include('./partials/header') %>

    <main>
      <section>
        <div class="mensaje">
          <h2>Edit치 producto <%= product.name %></h2>
        </div>
        <form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="nombreDeProducto">
            <label for="nombreDeProducto">Nombre de Producto</label>
            <input type="text" name="nombreDeProducto" id="nombreDeProducto" value="<%= product.name %>" />
          </div>
          <div class="marca">
            <label for="marca">Marca</label>
            <input type="text" name="marca" id="marca" value="<%= product.brand %>" />
          </div>
          <div class="precio">
            <label for="precio">Precio</label>
            <input type="number" name="precio" id="precio" value="<%= product.price %>" />
          </div>
          <div class="color">
            <label for="color">Color del cristal</label>
            <select name="color" id="color" value="<%= product.color %>">
              <option> Verde</option>
              <option> Azul</option>
              <option> Marr칩n</option>
              <option> Negro</option>
              <option> Magenta</option>
            </select>
          </div>
          <div class="descripcion">
            <textarea name="descripcion" id="descripcion" cols="30" rows="10"
            value="<%= product.description %>">Descripci칩n del Producto</textarea>
          </div>
          <div class="imagen">
            <label for="imagenDelProducto">Imagenes del producto </label>
            <img src="<%= '/images/products/' %><%= product.image %>" alt="Imagen del producto">
            <input type="file" name="imagen">
          
          <button type="submit" class="boton" required>Guardar</button>
        </form>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>