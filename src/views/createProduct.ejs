<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head', {nameStyle: 'register' , titleHTML: 'Creación de Productos' }) %>
</head>

<body>
  <%- include('./partials/header') %>

    <main>
      <section>
        <div class="mensaje">
          <h2>Creá tu producto</h2>
        </div>
        <form action="/products" method="POST" class="formulario" enctype="multipart/form-data">
          <div class="nombreDeProducto">
            <label for="nombreDeProducto">Nombre de Producto</label>
            <input type="text" name="nombreDeProducto" id="nombreDeProducto" required />
          </div>
          <div class="marca">
            <label for="marca">Marca</label>
            <select name="marca" id="marca">
              <% brands.forEach(brand => { %>
                <option value="<%- brand.id %>"><%- brand.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="precio">
            <label for="precio">Precio</label>
            <input type="number" name="precio" id="precio" required />
          </div>
          <div class="color">
            <label for="color">Color del cristal</label>
            <select name="color" id="color">
              <% colors.forEach(color => { %>
                <option value="<%- color.id %>"><%- color.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="descripcion">
            <textarea name="descripcion" id="descripcion" cols="30" rows="10"
              required>Descripción del Producto</textarea>
          </div>
          <div class="imagen">
            <label for="imagenDelProducto">Imagenes del producto </label>
            <input type="file" name="imagen" accept="image/*" multiple>
            <br>
          <button type="submit" class="boton" required>Crear</button>
        </form>
    </main>

    <%- include('./partials/footer') %>
</body>

</html>