<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head', {nameStyle: 'login' , titleHTML: 'Login' }) %>

  <body>
    <%- include('./partials/header') %>

    <main>
      <section class="login">
        <div class="mensaje">
          <h2>¡Bienvenido! Ingresá tu usuario y contraseña.</h2>
        </div>
        <form
          action="/"
          method="post"
          class="create-form"
          onsubmit="return validateForm()"
          name="myForm"
        >
          <div class="user">
            <label for="user">Usuario</label>
            <input type="text" name="userName" required />
          </div>
          <div class="contrasenia">
            <label for="password">Contraseña</label>
            <input
              type="password"
              name="userPassword"
              id="password"
              pattern=".{8,}"
              title="La contraseña debe tener un mínimo de 8 caracteres."
              required
            />
          </div>
          <div class="olvidaste"><a href="#">¿Olvidaste tu contraseña?</a></div>
          <div class="botones">
            <button type="submit" class="boton">Ingresar</button>
            <a href="/auth/register" class="crea">Creá una cuenta</a>
          </div>
        </form>
      </section>
    </main>

    <%- include('./partials/footer') %>

    <script src="scripts/login.js"></script>
  </body>
</html>
